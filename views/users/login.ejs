<% layout("/layouts/boilerplate") %>
<div class="row mt-1">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-8 offset-2">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" placeholder="enter a username" type="text" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" placeholder="enter a password" type="password" class="form-control" required>
                <div class="valid-feedback"> Looks good</div>
            </div>
            <button class="btn btn-success">
                Login
            </button>
        </form>
    </div>
</div>