<% layout("/layouts/boilerplate") %>
<body>

<div class="row mt-1">
 <div class="col-8 offset-2">
    <br>
    <h3>Create a New list</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="ADD A Catchy Title" type="text" class="form-control" required>
        <div class="invalid-feedback"> please enter valid title</div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter description" class="form-control"  required></textarea>
        <div class="invalid-feedback"> Please enter a short discription</div>
     </div>
    
    <div class="mb-3">
        <label for="image" class="form-label">upload listing Image</label>
        <input name="listing[image]"type="file" class="form-control" required>
    </div >
    <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" type="text"class="form-control" required>
            <div class="invalid-feedback"> Price should be valid</div>
   </div>
    <div class="row">
       <div class="mb-3 col-md-4" >
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="india " type="text" class="form-control" required>
        <div class="invalid-feedback"> country should be valid</div>
        </div>
    
        
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="jaipur rajasthan" type="text"class="form-control"  required>
            <div class="invalid-feedback"> Location should be valid</div>
        </div>

    </div>
        
        <button class="btn btn-dark add-btn mt-3">
            ADD
        </button>
        <br><br>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
</body>